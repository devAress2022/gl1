<aura:component controller="productDisplay" implements="force:appHostable,flexipage:availableForAllPageTypes,lightning:isUrlAddressable,flexipage:availableForRecordHome,force:lightningQuickActionWithoutHeader,force:hasRecordId" access="global" >
<aura:attribute name="isModalOpen" type="boolean" default="True"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name="AccountList" type="Product2[]"/>
    <aura:attribute name="SelectedAccountList" type="Product2[]"/>
    <aura:attribute name="prod" type="Product2[]"/>
    <aura:attribute name="SelectedAccount" type="String[]"/>  
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="draftValues" type="Product2[]" default="[]"/>
    <aura:attribute name="selectedCount" type="Product2[]"/>
    <aura:attribute name="selectedRows" type="Product2[]" />
    <aura:attribute name="LocalityPicklist" type="String[]" />
    <aura:attribute name="temp" type="Product2[]" default="[]"/>  
<div class="slds-media__figure">
                        <lightning:icon iconName="custom:custom33" alternativeText="Event" />
                    </div>
                                <div class="slds-media__body">
                        <div class="slds-page-header__name">
                            <div class="slds-page-header__name-title">
                                <h1>
                                    <span class="slds-page-header__title slds-truncate" title="Rohde Corp - 80,000 Widgets">Select Product to Add</span>
                                </h1>
                            </div>
                        </div>
                        <p class="slds-page-header__name-meta">Select Product to Add</p>
                    </div> 
                                 <table class="slds-table slds-table_bordered">
        <thead>
            <tr>              
                <th></th>
                <th>Sr. No.</th>
                <th>Product Name</th>
                <th>Quantity</th>  
                <th>Product Family</th>
            </tr>
        </thead>
        <tbody>
            <aura:iteration items="{!v.AccountList}" var="acc" indexVar="i">
                <tr>                    
                    <td>
                        <!--<ui:inputCheckbox text="{!acc.Id}" aura:id="chk" change="{!c.getSelectedAccount}"/>-->
                        <div class="slds-checkbox">
                            <input type="checkbox" name="chk" id="{!acc.Id}" onchange="{!c.getSelectedAccount}"/>                            
                            <label class="slds-checkbox__label" for="{!acc.Id}">
                                <span class="slds-checkbox_faux"></span>                                
                            </label>
                        </div>
                    </td>
                    <td>{!i+1}</td>
                    <td>{!acc.Name}</td>
                    <td>{!acc.SBQQ__DefaultQuantity__c}</td>
                    <td>{!acc.Family}</td>
                </tr>
            </aura:iteration>
        </tbody>
    </table><br/>
    <center> 
         <lightning:button variant="brand"
                          label="Continue"
                          onclick="{! c.openModel }" />
    </center>
       <aura:handler name="init" value="{! this }" action="{! c.init }"/>
            <aura:if isTrue="{!v.isModalOpen}">
                
                <!-- Modal/Popup Box starts here-->
                <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                    <div class="slds-modal__container">
                        <!-- Modal/Popup Box Header Starts here-->
                        <header class="Create Opportunity Products">
                            <lightning:buttonIcon iconName="utility:close"
                                                  onclick="{! c.closeModel }"
                                                  alternativeText="close"
                                                  variant="bare-inverse"
                                                  class="slds-modal__close"/>
                            <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate"></h2>
                        </header>
                        <!--Modal/Popup Box Body Starts here-->
                        <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                            <lightning:card title="Creating Opportunity Products">
                            
                               <div style="height: 300px">
                       <lightning:datatable
                             keyField="Id"
                             data="{! v.AccountList }"
                             columns="{! v.columns }"
                             hideCheckboxColumn="false"
                             draftValues="{! v.draftValues }"
                             selectedRecords="{!v.selectedCount}"
                             onrowselection="{!c.handleSelectedRow}"
                             onrowaction="{! c.handleRowAction }"
                             onsave="{! c.newmethodjs }"/>
      
    </div>
                                 <!--Modal/Popup Box Footer Starts here-->
                    <footer class="slds-modal__footer">
                        <lightning:button variant="neutral"
                                          label="Cancel"
                                          title="Cancel"
                                          onclick="{! c.closeModel }"/>
                        <lightning:button variant="brand"
                                          label="OK"
                                          title="OK"
                                          onclick="{!c.submitDetails}"/>
                    </footer>
                            </lightning:card>
                        </div>
                        
                    </div>
                </section>
                <div class="slds-backdrop slds-backdrop_open"></div>
            </aura:if>
</aura:component>