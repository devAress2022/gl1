<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction"
                access="global"  controller="ProjectController"> 
    <aura:attribute name="data" type="Action__c"/>
    <aura:attribute name="columns" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <div style="height: 300px">
        <lightning:datatable
                             keyField="id"
                             data="{! v.data }"
                             columns="{! v.columns }"
                             hideCheckboxColumn="true"/>
    </div>
    <div class="slds-align_absolute-center slds-m-top_medium slds-m-bottom_medium">
        <lightning:button variant="brand" label="Create Action" value="Create Action" onclick="{!c.createAction}" />
    </div>
</aura:component>